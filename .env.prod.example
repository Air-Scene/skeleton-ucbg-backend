# Shared Environment Variables
COMPOSE_PROJECT_NAME=myapp_prod

# Network Configuration
NETWORK_NAME=myapp_network

# Backend Configuration
BACKEND_PORT=8080
BACKEND_URL=https://your-backend-url.com

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=https://your-frontend-url.com

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=react_springboot_db
POSTGRES_USER=your_prod_db_user
POSTGRES_PASSWORD=your_prod_db_password
POSTGRES_ROOT_PASSWORD=your_secure_root_password

# PostgreSQL Data Directories
PGDATA=/var/lib/postgresql/data/pgdata
POSTGRES_DATA_DIR=./database/data/postgres
POSTGRES_LOG_DIR=./database/logs/postgres

# Mail Configuration (Mailtrap for production)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_FROM=noreply@yourdomain.com
MAIL_DEBUG=false

# Profile Configuration
SPRING_PROFILES_ACTIVE=prod

# System Configuration
TZ=UTC 

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=virtual-crane-447118-f0 

# Database Configuration
POSTGRES_DB=your_prod_db_name
POSTGRES_USER=your_prod_db_user
POSTGRES_PASSWORD=your_prod_db_password
CLOUD_SQL_INSTANCE=your-project-id:region:instance-name

# Database Connection Pool Settings
DB_MAX_POOL_SIZE=2
DB_MIN_IDLE=1
DB_CONNECTION_TIMEOUT=60000
DB_INIT_FAIL_TIMEOUT=60000
DB_VALIDATION_TIMEOUT=10000

# JPA Configuration
JPA_DDL_AUTO=update
DB_SCHEMA=public
FORMAT_SQL=true
JPA_SHOW_SQL=false
JPA_GENERATE_DDL=true

# Static Resources
STATIC_CACHE_PERIOD=3600

# Server Configuration
SERVER_PORT=8080

# Logging Levels
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=INFO
LOG_LEVEL_HIKARI=INFO

# Mail Configuration (Mailtrap for production)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_FROM=noreply@yourdomain.com
MAIL_DEBUG=false

# JWT Configuration
JWT_SECRET=your-secure-production-secret-key
JWT_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000

# URLs and Domains
FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.com
COOKIE_DOMAIN=your-domain.com

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
SPRING_PROFILES_ACTIVE=prod 